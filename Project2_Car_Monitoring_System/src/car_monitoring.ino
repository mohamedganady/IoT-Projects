void setup() {
  // put your setup code here, to run once:
 Serial.begin(115200);

 Blynk.begin(BLYNK_AUTH_TOKEN, ssid, pass);
 dht.begin();

  // SSD1306_SWITCHCAPVCC = generate display voltage from 3.3V internally
  if (!display.begin(SSD1306_SWITCHCAPVCC, 0x3C)) { // Address 0x3D for 128x64
    Serial.println(F("SSD1306 allocation failed"));
    for (;;); // Don't proceed, loop forever
  }
  // Clear the buffer
  display.clearDisplay();
  printText();
  delay(1500);

 pinMode(enable1, OUTPUT);
 pinMode(motor1Pin1, OUTPUT);
 pinMode(motor1Pin2, OUTPUT);

 pinMode(enable2, OUTPUT);
 pinMode(motor2Pin1, OUTPUT);
 pinMode(motor2Pin2, OUTPUT);
 
 ledcAttach(enable1, freq, resolution);
 ledcAttach(enable2, freq, resolution);
}

void loop() {
  // put your main code here, to run repeatedly:

 Blynk.run();

 moveForward(side_A_duration);
 turnRight(turn_duration);
 moveForward(side_B_duration);
 turnRight(turn_duration);
 moveForward(side_A_duration);
 turnRight(turn_duration);
 moveForward(side_B_duration);
 turnRight(turn_duration);

  h = dht.readHumidity();
  t = dht.readTemperature();
  if (isnan(h) || isnan(t)) {
    Serial.println("Failed to read from DHT sensor!");
    return;
  }
  showBitmap();
  printText();
  display.display();
  delay(500);
  display.clearDisplay();

  Blynk.virtualWrite(V0, h);
  Blynk.virtualWrite(V1, t);
  delay(3000);

}

void moveForward(int duration){
  ledcWrite(enable1, speed);
  ledcWrite(enable2, speed);
  digitalWrite(motor1Pin1, LOW);
  digitalWrite(motor1Pin2, HIGH);
  digitalWrite(motor2Pin1, LOW);
  digitalWrite(motor2Pin2, HIGH);
  delay(duration);
}

void turnRight(int duration){
  ledcWrite(enable1, 155);
  ledcWrite(enable2, 155);
  digitalWrite(motor1Pin1, LOW);
  digitalWrite(motor1Pin2, HIGH);
  digitalWrite(motor2Pin1, HIGH);
  digitalWrite(motor2Pin2, LOW);
  delay(duration);
}

